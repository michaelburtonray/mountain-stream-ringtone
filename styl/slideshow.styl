section#slideshow {
  height: 400%;
  overflow: hidden;
  position: relative;
  .stage {
    position: fixed;
    top: auto;
    width: 100%;
    left: 0;
    height: 100%;
    // transform: scale(.5);
    transform-origin: 0 0;
    transition-duration: 600ms;
  }
  a.slide {
    display: block;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;

    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
}